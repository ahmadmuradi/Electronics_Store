# Electronics Store Inventory System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///./enhanced_inventory.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://inventory_user:inventory_pass@localhost:5432/inventory_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourstore.com
COMPANY_NAME=Your Electronics Store

# AWS Configuration (for cloud backup)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
BACKUP_BUCKET_NAME=your-backup-bucket

# QuickBooks Integration (optional)
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:8001/auth/quickbooks/callback

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
